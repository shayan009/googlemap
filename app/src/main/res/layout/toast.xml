<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="horizontal">    <LinearLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:background="@color/lightGreen"        android:orientation="horizontal">        <android.support.v7.widget.AppCompatImageView            android:id="@+id/ivIcon"            android:layout_width="40dp"            android:layout_height="40dp"            android:padding="10dp"            android:src="@drawable/ic_menu_camera"            tools:layout_editor_absoluteX="8dp"            tools:layout_editor_absoluteY="8dp"            tools:srcCompat="@tools:sample/avatars" />        <android.support.v7.widget.AppCompatTextView            android:id="@+id/tvText"            android:layout_width="wrap_content"            android:layout_height="40dp"            android:gravity="center_vertical"            android:text="Hello"            android:textColor="@color/brickred"            android:textSize="18sp"            app:fontFamily="monospace"            app:layout_constraintLeft_toRightOf="@+id/ivIcon" />    </LinearLayout></RelativeLayout>